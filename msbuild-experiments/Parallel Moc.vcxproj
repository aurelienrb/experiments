    <PropertyGroup>
        <MocOutputDirectory>$(IntDir).moc</MocOutputDirectory>
    </PropertyGroup>
	
	<!-- Will regenerate moc file for all headers, but only if one of them has changed -->
  <Target Name="MocHeaders" Inputs="@(ClInclude)" Outputs="$(MocOutputDirectory)\moc_timestamp.txt" BeforeTargets="CompileUnity">
	<MakeDir Directories="$(MocOutputDirectory)" />
	<!-- A smart tool will skip regeneration of up-to-date files, and process the resulting batch in parallel -->
    <Message Text="Moc'ing '@(ClInclude)' from '$(ProjectDir)' to '$(MocOutputDirectory)'"/>
	<!-- WriteLinesToFile can be used to dump the include path into a file -->
	<Exec Command="echo /* %(ClInclude.FullPath) */ > &quot;$(MocOutputDirectory)\moc_%(ClInclude.Filename).cpp&quot;" />
	<Touch AlwaysCreate="true" Files="$(MocOutputDirectory)\moc_timestamp.txt"/>
  </Target>

  <!-- added generated moc files to the compilation list -->
  <Target Name="CompileUnity" BeforeTargets="ClCompile">
    <ItemGroup>
		<ClCompile Include="$(MocOutputDirectory)\moc_*.cpp" />
    </ItemGroup>
  </Target>

  <!-- cleaning -->
  <Target Name="MocClean" BeforeTargets="Clean">
    <RemoveDir Directories="$(MocOutputDirectory)" />
  </Target>
  
